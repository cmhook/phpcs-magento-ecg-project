<?xml version="1.0" encoding="UTF-8"?>
<config>
    <validators>
        <CodeSniffer>
            <rule>
                <directory>.coding-standards/phpcs</directory>
            </rule>
        </CodeSniffer>
    </validators>
    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <validators>
                        <CodeSniffer>1</CodeSniffer>
                    </validators>
                </php>
            </filetype>
        </pre-commit>
    </hooks>
</config>
